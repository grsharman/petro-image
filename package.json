{
  "name": "petro-image",
  "version": "0.1.0",
  "description": "Deep zoom petrographic images with OpenSeaDragon",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "electron-builder install-app-deps",
    "make": "electron-builder",
    "clean": "rimraf dist node_modules"
  },
  "build": {
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ],
    "directories": {
      "output": "out"
    },
    "files": [
      "**/*"
    ],
    "npmRebuild": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/grsharman/petro-image.git"
  },
  "author": "Glenn R. Sharman and Jonathan P. Sharman",
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/grsharman/petro-image/issues"
  },
  "homepage": "https://github.com/grsharman/petro-image",
  "devDependencies": {
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "rimraf": "^6.0.1"
  },
  "dependencies": {
    "sharp": "^0.34.3"
  }
}
